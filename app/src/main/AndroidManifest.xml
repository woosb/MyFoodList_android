            <meta-data
                    android:name="android.app.lib_name"
                    android:value=""/>
        </activity>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyAwYC5JTVqRPqE-X0m1tQoT4hcJpPine0s"/>

        <activity
                android:name=".MainActivity2"
                android:exported="false"/>
        <activity
                android:name=".RoomDbEx"
                android:exported="false"/>
        <activity
